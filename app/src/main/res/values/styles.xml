<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DropboxButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlHighlight">#90BAFF</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="GreenButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlHighlight">@color/lightGreen</item>
        <item name="colorButtonNormal">@color/green</item>
    </style>

    <style name="BlueButtonTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlHighlight">#90BAFF</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

</resources>
