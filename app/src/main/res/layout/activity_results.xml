<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                tools:context="edu.uark.pipeplanparser.ResultsActivity">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editText"
                    android:layout_alignBottom="@+id/editText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:text="FARM NAME:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"

                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editText"
                    android:layout_marginTop="34dp"

                    android:text="FIELD NAME:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/editText"
                    android:layout_alignRight="@+id/editText"
                    android:layout_below="@+id/editText"
                    android:layout_marginTop="21dp"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"

                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/editText2"
                    android:layout_marginTop="55dp"
                    android:text="HOLE SPACING:"

                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editText3"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="41dp"

                    android:text="PIPE SIZE"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/list_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignStart="@+id/textView4"
                    android:layout_below="@+id/textView4"
                    android:layout_margin="5dp"

                    android:layout_marginTop="13dp"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="PIPE PLANNER DESIGN"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/upload_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/actionBarBackground"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_dropbox"
                    android:drawablePadding="10dp"
                    android:onClick="upload"
                    android:padding="10dp"
                    android:text="UPLOAD PDF"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/button_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/list_main"
                    android:layout_alignRight="@+id/list_main"
                    android:layout_marginTop="25dp"
                    android:onClick="printSkip"
                    android:padding="10dp"
                    android:text="PRINT PIPE" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/list_main"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="STATION"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_alignTop="@+id/textView6"
                    android:text="HOLE SIZE"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginRight="100dp"
                    android:text="COMMENT"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/list_main"
                    android:layout_toLeftOf="@+id/textView7"
                    android:layout_toStartOf="@+id/textView7"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/editText4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/editText4"
                    android:layout_below="@+id/editText4"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp" />

                <LinearLayout
                    android:id="@+id/dynamic_spinner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/list_main"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/editText4" />

                <LinearLayout

                    android:id="@+id/linearLayout_normal"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/list_main"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/editText13"
                    android:layout_toRightOf="@+id/editText4"
                    android:layout_toStartOf="@+id/editText13"
                    android:ems="10"
                    android:orientation="vertical">


                    <Spinner
                        android:id="@+id/listholesize"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/list_main"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/editText13"
                        android:layout_toRightOf="@+id/editText4"
                        android:layout_toStartOf="@+id/editText13"
                        android:ems="10"
                        android:orientation="vertical"
                        android:scrollbars="none" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/spinner3"
                        android:layout_alignStart="@+id/spinner3"
                        android:layout_alignTop="@+id/editText5"
                        android:layout_marginTop="16dp"
                        android:layout_toLeftOf="@+id/editText13" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/editText15"
                        android:layout_alignEnd="@+id/spinner"
                        android:layout_alignRight="@+id/spinner"
                        android:layout_toEndOf="@+id/upload_btn"
                        android:layout_toRightOf="@+id/upload_btn" />

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editText9"
                        android:layout_alignLeft="@+id/listholesize"
                        android:layout_alignStart="@+id/listholesize"
                        android:layout_toLeftOf="@+id/editText13"
                        android:layout_toStartOf="@+id/editText13" />

                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/spinner3"
                        android:layout_alignRight="@+id/spinner3"
                        android:layout_below="@+id/editText9"
                        android:layout_marginTop="17dp"
                        android:layout_toRightOf="@+id/upload_btn" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/editText5"
                    android:layout_alignRight="@+id/editText5"
                    android:layout_below="@+id/editText5"
                    android:layout_marginTop="13dp"
                    android:layout_toStartOf="@+id/listHolesize"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp" />


                <EditText
                    android:id="@+id/editText13"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignTop="@+id/list_main"
                    android:layout_toLeftOf="@+id/list_main"
                    android:background="@drawable/rect"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="5dp" />


            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</layout>